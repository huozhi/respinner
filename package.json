  "license": "MIT",
  "homepage": "https://github.com/huozhi/respinner#readme",
  "devDependencies": {
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "bunchee": "^6.6.2",
    "next": "16.0.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "respinner": "link:./",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "react": ">= 18"
  },
  "packageManager": "pnpm@7.33.5"
